automations:
  mark_good_pr:
    if:
      - {{ branch.diff.size <= 100 }}
    run:
      - action: add-reviewers@v1
        args:
          reviewers: ["EladKohavi", "yeelali14"]
      - action: add-labels@v1
        args:
          labels: ["{{ branch | estimatedReviewTime }} time"]
  mark_big_pr:
    if:
      - {{ branch.diff.size > 100 }}
    run:
      - action: add-labels@v1
        args:
          labels: ["big_size"]
