automations:
  mark_good_pr:
    if:
      - {{ branch.diff.size <= 100 }}
    run:
      - action: add-labels@v1
        args:
          labels: ["good_size"]
  mark_big_pr:
    if:
      - {{ branch.diff.size > 100 }}
    run:
      - action: add-labels@v1
        args:
          labels: ["big_size"]
  mark_color_pr:
    if:
      - {{ branch.diff.size > 0 }}
    run:
      - action: add-label@v1
        args:
          label: "color_pr"
          color: "f29513"
